<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>SecondServlet</servlet-name>
        <servlet-class>servlet.SecondServlet</servlet-class>
        <init-param>
            <param-name>par1</param-name>
            <param-value>val1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>PageByServlet</servlet-name>
        <servlet-class>servlet.PageByServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Calculator</servlet-name>
        <servlet-class>servlet.Calculator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageByServlet</servlet-name>
        <url-pattern>/PageByServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecondServlet</servlet-name>
        <url-pattern>/SecondServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Calculator</servlet-name>
        <url-pattern>/Calculator</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/errors/404.html</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/errors/404.html</location>
    </error-page>
</web-app>
